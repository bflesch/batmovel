<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.batmovel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"
        android:maxSdkVersion="19" />
    <uses-permission
        android:name="android.permission.INTERNET"
        android:maxSdkVersion="19" />
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:maxSdkVersion="19" />
    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        android:maxSdkVersion="19" />

    <application
        android:name="com.example.batmovel.HitchhikingApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_caronas_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.example.batmovel.RideListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.batmovel.ModeChooser"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.batmovel.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.example.batmovel.RideFormActivity"
            android:label="@string/title_activity_ride_form" >
        </activity>
        <activity
            android:name="com.example.batmovel.RatingActivity"
            android:label="@string/title_activity_rating"
            android:parentActivityName="com.example.batmovel.ModeChooser" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.batmovel.ModeChooser" />
        </activity>
    </application>

</manifest>